ul#dropdown.dropdown-content
	li
		a(href="#/help").black-text
			img(src="https://maxcdn.icons8.com/Color/PNG/48/Programming/help-48.png" title="Help" width="36")
			|  Help
	li
		a(href="" ng-click="logout()").black-text
			img(src="https://maxcdn.icons8.com/Color/PNG/48/Household/door-48.png" title="Door" width="36")
